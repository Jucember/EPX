extends ../layouts/common.pug

block content
  h1 LOGIN 
  if errors
    each error in errors
      .alert.alert-danger= error
      
  form(method="POST")
    .form-group
      label(for="email") email
      input#email.form-control(type="text", name="email", value = values? 
      values.email : "")
      
    .form-group
      label(for="password") password
      input#password.form-control(type="password" ,name="password", value = values? 
      values.password : "")

    button(class="btn btn-primary ml-5") submit
  
