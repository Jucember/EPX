extends ../layouts/common.pug

block content
  h1 
    span.mr-3 User
    a.btn.btn-primary(href="/users/create") New
  .d-flex.align-items-center
    form.ml-auto(action="users/search" method="GET" class="d-flex")
      input(type="text" name="q" class="form-control w-50")
      button(class="btn btn-primary ml-6") Search

  table.table
    tr
      th Name
      th Phone
      th Action
        
    each user in users
      tr
         td= user.name
         td= user.phone
         td
           a.btn.btn-light(herf='/users' + user.id) View
